{
    "manifest_version": 2,
    "name": "Dark Mode Extension",
    "version": "1.0",
    "description": "A simple dark mode for websites",
    "permissions": ["activeTab", "storage"],
    "browser_action": {
        "default_popup": "popup.html",
        "default_icon": "icon.png"
    },
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["content.js"]
        }
    ]
}